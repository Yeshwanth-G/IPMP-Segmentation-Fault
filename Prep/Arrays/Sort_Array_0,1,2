//Count method--**************
void sort012(int a[], int n)
    {
       int i=0,j=n-1,k=0;
       while(k<=j){
           if(a[k]==1){
               k++;
           }else if(a[k]==0){
               swap(a[k],a[i]);
               i++;
               k++;
           }else{
               swap(a[k],a[j]);
               j--;
           }
       }
    }
